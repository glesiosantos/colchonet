<% if @user.errors.any? %>
<div id="error_explanation">
    <h2>Ops! Ocorreu os seguinte(s) error(s):</h2>
    <ul>
        <% @user.errors.full_messages.each do |message|%>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>


<%= form_for @user do |f| %>
    <p>
        <%= f.label :fullname %>
        <%= f.text_field :fullname %>
    </p>

    <p>
        <%= f.label :location %>
        <%= f.text_field :location %>
    </p>


    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>

    <p>
        <%= f.label :password %>
        <%= f.text_field :password %>
    </p>

    <p>
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation %>
    </p>

    <p>
        <%= f.label :bio %>
        <%= f.text_area :bio %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<%end%>