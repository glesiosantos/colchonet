<%= form_for @user, html: { class: "needs-validation", novalidate: true } do |f| %>
    <div class="row">
        <div class="col-8">
            <%= f.label :fullname, class: "form-label"%>
            <%= f.text_field :fullname, class: "form-control"%>
            <%= error_tag @user, :fullname %>
        </div>
        
        <div class="col-4">
            <%= f.label :location, class: "form-label"%>
            <%= f.text_field :location, class: "form-control" %>
            <%= error_tag @user, :location %>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            <%= f.label :email, class: "form-label"%>
            <%= f.text_field :email, class: "form-control" %>
            <%= error_tag @user, :email %>
        </div>
        <div class="col-3">
            <%= f.label :password, class: "form-label"%>
            <%= f.text_field :password, class: "form-control"%>
            <%= error_tag @user, :password %>
        </div>
        <div class="col-3">
            <%= f.label :password_confirmation, class: "form-label"%>
            <%= f.text_field :password_confirmation, class: "form-control" %>
            <%= error_tag @user, :password_confirmation %>
        </div>
    </div>

    <div class="mt-3">
        <%= f.label :bio, class: "form-label"%>
        <%= f.text_area :bio, class: 'form-control' %>
    </div>

    <div class="d-grid gap-2 mt-3">
        <%= f.submit 'REGISTER', :class => "btn btn-lg btn-success " %>
    </div>

<%end%>